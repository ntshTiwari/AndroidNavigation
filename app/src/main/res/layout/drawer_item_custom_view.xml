<?xml version="1.0" encoding="utf-8"?>
<!--This is a custom Menu item action layout-->
<androidx.cardview.widget.CardView
    android:id="@+id/expansion_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:id="@+id/expansion_clickable_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drawer Screen 3"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <View
            android:id="@+id/expansion_clickable_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_down"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expansion_hiddenview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/expansion_textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="Expanded text 1"/>

        <TextView
            android:id="@+id/expansion_textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="Expanded text 2"/>

    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>